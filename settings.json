{
    "files.associations": {
        "*.h": "c",
        "*.py" : "python"
    },
    "files.exclude": {
        "**/*.efi": true,
        "**/*.o": true,
        "**/*.o.cmd": true,
        "**/*.so": true,
        "**/*.su": true
    },
    "[c]": {
        "editor.tabSize": 8,
        "editor.insertSpaces": false,
        "editor.rulers": [80,100]
    },
    "[python]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.rulers": [80,100]
    },
    "C_Cpp.errorSquiggles": "enabledIfIncludesResolve"
}
